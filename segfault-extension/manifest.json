{
    "manifest_version": 3,
    "name": "Segfault Unit Converter",
    "author": "Segfault Team, NDI Polytech 2025",
    "version": "1.0",
    "description": "Convert units and auto-scan web pages",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
